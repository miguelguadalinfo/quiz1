<tr>
  <td class="label"><label for="preg" class="rem">Pregunta:</label></td>
  <td class="input"><input type="text" id="preg" name="quiz[pregunta]" value="<%= quiz.pregunta %>"/></td>
</tr>
<tr>
  <td class="label"><label for="resp" class="rem">Respuesta:</label></td>
  <td class="input"><input type="text" id="resp" name="quiz[respuesta]" value="<%= quiz.respuesta %>"/></td>
</tr>
<tr>
  <td class="label"><label for="tema" class="rem">Tema:</label></td>
  <td class="input">
    <select id="tema" name="quiz[tema]">
      <option value="otro" <%= ((!quiz.tema) || (quiz.tema==='otro')) ? 'selected' : '' %>>Otro</option>
      <option value="humanidades" <%= (quiz.tema==='humanidades') ? 'selected' : '' %>>Humanidades</option>
      <option value="ocio" <%= (quiz.tema==='ocio') ? 'selected' : '' %>>Ocio</option>
      <option value="ciencia" <%= (quiz.tema==='ciencia') ? 'selected' : '' %>>Ciencia</option>
      <option value="tecnologia" <%= (quiz.tema==='tecnologia') ? 'selected' : '' %>>Tecnolog√≠a</option>
    </select>
  </td>
</tr>
<tr>
  <td><a href="/quizes"><button type="button">Cancelar</button></a></td>
  <td><input type="submit" value="Salvar"/></td>
</tr>
